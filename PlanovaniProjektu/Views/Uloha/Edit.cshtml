@model PlanovaniProjektu.Models.TbUloha

@{
    ViewData["Title"] = "Edit";
}

<h1>Editace</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nazev" class="control-label"></label>
                <input asp-for="Nazev" class="form-control" />
                <span asp-validation-for="Nazev" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Popis" class="control-label"></label>
                <textarea asp-for="Popis" class="form-control" style="height: 200px;" />@Model.Popis</textarea>
                <span asp-validation-for="Popis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HodinovaSazba" class="control-label"></label>
                <input asp-for="HodinovaSazba" class="form-control" />
                <span asp-validation-for="HodinovaSazba" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PredpokladanaDobaTrvani" class="control-label"></label>
                <input asp-for="PredpokladanaDobaTrvani" class="form-control" />
                <span asp-validation-for="PredpokladanaDobaTrvani" class="text-danger"></span>
            </div>
            <div style="visibility: hidden;">
                <input asp-for="Projekt" class="form-control" />
            </div>
            <div class="form-group" style="margin-top: 20px;">
                <input type="submit" value="Save" class="loginButton" /> |
                <a class="loginButton btnSeznam" asp-action="Index">Zpět na seznam</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
